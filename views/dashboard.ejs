<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tie</title>
    <% include partials/commonMeta %>
    <% include partials/commonCss %>
  </head>

  <body>
    <% include partials/navbar %>
    <section class="features-icons text-center">
      <div class="container">
        <div class="row">
          <% for(var i=0; i < games.length; i++) { %>
            <div class="col-lg-4">
              <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                <div class="features-icons-icon d-flex"><i class="icon-screen-desktop m-auto text-primary"></i></div>
                <h3><%= games[i].displayTitle %></h3>
                <p class="lead mb-0"><%= games[i].description %></p>
              </div>
          </div>
          <% } %>
        </div>
        <a href="/game/new" class="btn btn-primary my-2 my-sm-0">New game</a>
      </div>
    </section>
    <% include partials/footer %>
    <% include partials/commonJs %>
  </body>
